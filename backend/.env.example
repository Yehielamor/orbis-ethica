# Orbis Ethica Environment Configuration

# Environment
ENVIRONMENT=development  # development, staging, production

# API Keys (DO NOT COMMIT REAL KEYS)
OPENAI_API_KEY=your_openai_key_here
ANTHROPIC_API_KEY=your_anthropic_key_here

# Database
DATABASE_URL=postgresql://localhost:5432/orbis_ethica
REDIS_URL=redis://localhost:6379

# IPFS
IPFS_API_URL=http://localhost:5001

# Blockchain
WEB3_PROVIDER_URL=http://localhost:8545
PRIVATE_KEY=your_private_key_here

# Security
SECRET_KEY=your_secret_key_here
JWT_SECRET=your_jwt_secret_here

# Logging
LOG_LEVEL=INFO
SENTRY_DSN=

# Consensus Parameters
ALPHA=0.25  # Utility weight
BETA=0.40   # Love/Care weight
GAMMA=0.20  # Fairness penalty weight
DELTA=0.15  # Risk penalty weight

# Thresholds
THRESHOLD_ROUTINE=0.50
THRESHOLD_HIGH_IMPACT=0.70
THRESHOLD_CONSTITUTIONAL=0.85
QUORUM=0.60

# Reputation
REPUTATION_LEARNING_RATE=0.1
REPUTATION_DECAY_RATE=0.001
REPUTATION_INITIAL=0.5
REPUTATION_BURN_THRESHOLD=0.5
